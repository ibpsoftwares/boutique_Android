<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kftsoftwares.boutique">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".volly.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activities.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.SplashScreen"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".activities.ProductList"
            android:label="@string/title_activity_product_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.Productdetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CartView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ZoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Change_Password"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ShippingDetails"
            android:screenOrientation="portrait" >



        </activity>
        <activity
            android:name=".activities.Payment"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.OrderDetails"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activities.PriceDetailScreen"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>