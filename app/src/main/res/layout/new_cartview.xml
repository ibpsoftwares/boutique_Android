<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10sp">

    <com.kftsoftwares.boutique.Utils.CircularImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        android:id="@+id/profile_image"
        app:civ_shadow_radius="1"
        app:civ_shadow_color="#8BC34A"/>

    <com.kftsoftwares.boutique.Utils.TextViewBold
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="Jashn women"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.kftsoftwares.boutique.Utils.TextViewRegular
        android:id="@+id/qnt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="QTY:"
        android:textColor="@color/dark_gray"
        android:textSize="14sp" />

    <com.kftsoftwares.boutique.Utils.TextViewRegular
        android:id="@+id/qnt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/qnt_txt"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/qnt_count"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/minus"
            android:background="@drawable/even_border_purple">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_minus" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/add"
            android:background="@drawable/odd_border_purple">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_add" />

        </RelativeLayout>

    </LinearLayout>

    <com.kftsoftwares.boutique.Utils.TextViewRegular
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="$122"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignParentEnd="true"
        android:id="@+id/delete"
        android:contentDescription="@string/app_name"
        android:background="@mipmap/orange_cancle" />

</RelativeLayout>