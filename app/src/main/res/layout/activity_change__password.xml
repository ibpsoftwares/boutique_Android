<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kftsoftwares.boutique.activities.Change_Password">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@color/tabLayout">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_left" />

        <com.kftsoftwares.boutique.utils.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/change_password"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_16ssp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/edit_text_border"
            android:clickable="false"
            android:focusable="false"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/whitney_medium"
            android:hint="@string/enter_email"
            android:padding="@dimen/_8sdp"
            android:textColorHint="@color/gray_edit_text" />

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/whitney_medium"
            android:hint="@string/enter_old_password"
            android:padding="@dimen/_8sdp"

            android:textColorHint="@color/gray_edit_text" />


        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/whitney_medium"
            android:hint="@string/enter_new_password"
            android:padding="@dimen/_8sdp"
            android:textColorHint="@color/gray_edit_text" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/whitney_medium"
            android:hint="@string/enter_confirm_passwor"
            android:padding="@dimen/_8sdp"

            android:textColorHint="@color/gray_edit_text" />


        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:background="@color/tabLayout"
            android:fontFamily="@font/whitney_medium"
            android:text="@string/save"
            android:id="@+id/save"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
