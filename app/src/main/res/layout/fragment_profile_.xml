<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.kftsoftwares.boutique.Fragments.Profile_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10sp"

        >

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/circle">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/profile_image"
                app:civ_border="true"

                app:civ_border_color="#000"
                app:civ_border_width="2dp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:background="@mipmap/photo_side"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <TextView
            android:id="@+id/profile_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Zane David"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/edit_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_Name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/editImage"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@mipmap/edit"
                android:contentDescription="@string/app_name" />

            <com.kftsoftwares.boutique.utils.TextViewRegular
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10sp"
                android:layout_toRightOf="@+id/editImage"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:civ_border="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_profile_layout"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="Name"
                android:padding="10sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/edit_text_border"
                android:hint="Last Name"
                android:padding="10sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/edit_text_border"
                android:hint="Mobile Number"
                android:padding="10sp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/edit_text_border"
                android:hint="DOB"
                android:padding="10sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/edit_text_border"
                android:hint="Gender"
                android:padding="10sp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@color/tabLayout"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
