<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp">

        <com.kftsoftwares.boutique.utils.TextViewBold
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tabLayout"
            android:textSize="@dimen/_16ssp" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="Home"
            android:background="@drawable/home_or_office"
            android:textSize="@dimen/_12ssp"
            android:layout_alignParentEnd="true" />
        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:text="Edit"
            android:background="@color/tabLayout"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true" />

        <com.kftsoftwares.boutique.utils.TextViewRegular
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toStartOf="@+id/button"
            android:textSize="@dimen/_16ssp" />

        <com.kftsoftwares.boutique.utils.TextViewRegular
            android:id="@+id/mobileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_16ssp" />

        <com.kftsoftwares.boutique.utils.TextViewRegular
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/mobileText"
            android:layout_toStartOf="@+id/button"
            android:textSize="@dimen/_16ssp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:visibility="gone"
        android:layout_below="@+id/relativeLayout"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/edit"
            android:textColor="@color/dark_blue"
            android:background="@color/white"
            android:layout_marginEnd="1dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/add_new_address"
            android:textColor="@color/dark_blue"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"

            />

    </LinearLayout>

</RelativeLayout>