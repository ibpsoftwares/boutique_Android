<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="com.kftsoftwares.boutique.activities.Productdetails">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/tabLayout">

        <RelativeLayout
            android:id="@+id/relativeLayoutBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="25sp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="5sp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_left" />
        </RelativeLayout>

        <com.kftsoftwares.boutique.utils.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Payment Details"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/cart"
            android:visibility="gone" />


    </RelativeLayout>

    <ScrollView
        android:id="@+id/parentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"

        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="20dp">

            <com.kftsoftwares.boutique.utils.TextViewRegular
                android:id="@+id/priceDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Details"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceDetailText"
                android:background="@color/light_gray"
                android:padding="15dp">

                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Total"
                    android:textColor="@color/black" />

                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999"
                    android:id="@+id/totalItem"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black" />
                <com.kftsoftwares.boutique.utils.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Tax"
                android:layout_below="@+id/totalItem"
                android:textColor="@color/black" />

                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999"
                    android:id="@+id/totalTax"
                    android:layout_below="@+id/totalItem"
                    android:layout_marginBottom="5dp"

                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black" />
                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dilvery Charges"
                    android:layout_below="@+id/totalTax"
                    android:textColor="@color/black" />

                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/totalTax"
                    android:id="@+id/deliveryCharges"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black" />
                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discounts"
                    android:layout_below="@+id/deliveryCharges"
                    android:textColor="@color/black" />

                <com.kftsoftwares.boutique.utils.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/deliveryCharges"
                    android:id="@+id/discount"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black" />

                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@+id/discount"
                    android:id="@+id/view"
                    android:layout_marginBottom="5dp"
                            />
                <com.kftsoftwares.boutique.utils.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discounts"
                    android:layout_below="@+id/view"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <com.kftsoftwares.boutique.utils.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99999"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/view"
                    android:id="@+id/total"
                    android:textSize="18sp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
